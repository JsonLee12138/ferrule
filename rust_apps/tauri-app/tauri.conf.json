{
  "$schema": "https://schema.tauri.app/config/2.0.0-rc",
  "productName": "Json-Tools",
  "version": "0.1.3",
  "identifier": "com.json-ferrume.app",
  "build": {
    "devUrl": "http://localhost:3000",
    "frontendDist": "../../frontend_apps/pc-ferrume/dist"
  },
  "app": {
    "windows": [
      {
        "title": "Json 小工具",
        "width": 800,
        "height": 600,
        "label": "main",
        "transparent": true,
        "decorations": true,
        "visible": false,
        "center": true,
        "shadow": true
      },
      {
        "title": "翻译",
        "label": "translate",
        "url": "/translate",
        "transparent": true,
        "decorations": false,
        "visible": false,
        "width": 500,
        "height": 600,
        "shadow": false,
        "center": true
      },
      {
        "title": "Json编辑器",
        "label": "json_editor",
        "url": "/json-editor",
        "transparent": true,
        "decorations": true,
        "width": 800,
        "height": 600,
        "shadow": false,
        "visible": false,
        "center": true
      },
      {
        "title": "设置",
        "label": "setting",
        "url": "/setting",
        "transparent": false,
        "decorations": true,
        "width": 500,
        "height": 600,
        "shadow": false,
        "visible": false,
        "center": true
      },
      {
        "title": "URL解析器",
        "label": "url_decode",
        "url": "/url-decode",
        "transparent": false,
        "decorations": true,
        "width": 800,
        "height": 600,
        "shadow": false,
        "visible": false,
        "center": true
      }
    ],
    "macOSPrivateApi": true,
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"],
    "resources": {
      "config/*": "config/"
    }
  }
}
